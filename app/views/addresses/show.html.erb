<%= render partial: "header", locals: { name: 'Address Weather Forcast' } %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Address</h3>
  </div>  
  <div class="card-body">
    <div class="mb-3"> 
      <table>
        <tr ALIGN=TOP>  
          <td>  
            Name: 
          </td>
          <td>
            <%= @address.name %>
          </td>  
        </tr>
        <tr VALIGN=TOP>  
          <td>  
            Address: 
          </td>
          <td>
            <% if @address.street.present? %>
              <%= @address.street %><br>
            <% end%>
            <% if @address.city.present? %>  
              <%= @address.city %>,
            <% end %>  
            <%= @address.state %>  <%= @address.zipcode %>
          </td>  
        </tr>
      </table>
    </div>  
    <div class="mb-3">
      <%= button_to "Delete Address",  
            address_path(@address),
            method: :delete, 
            class:  "btn btn-danger",
            form: {data: {turbo_confirm: 'Are you sure?'}} %>
    </div>                                                                              
  </div>
</div>      

<% if @weather.present? %>
  <%= render partial: "weather_details", locals: { weather: @weather } %>     
<% else %>
<div class="card">
  <div class="card-body">
    <div class="mb-3">
      Current Weather Conditions and Forcast Not Available  
    </div>
  </div>
</div>           
<% end%>  
